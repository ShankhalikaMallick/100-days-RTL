RTL:
`timescale 1ns / 1ps
//Date : 07/04/2025
//Name : Shankhalika Mallick

// DAY-33 T FLIPFLOP

module T_FF(clk,T,Q,Qbar);
input T, clk;
output reg Q=1'b0;
output Qbar;
assign Qbar=~Q;
always @(negedge clk)
begin
  case (T)
  1'b0: Q<=Q;
  1'b1: Q<=Qbar;
  default: Q<=Q;
  endcase
end
endmodule

