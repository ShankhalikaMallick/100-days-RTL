RTL:

`timescale 1ns / 1ps
//Date : 15/05/2025
//Name : Shankhalika Mallick

// DAY-71 BCD TIME COUNTER

module BCD(rst, clk, sec1, sec2, min1, min2, hr1, hr2);
input rst, clk;
output reg [3:0] sec1, sec2, min1, min2, hr1, hr2;
always @(posedge clk)
begin
    if(rst==1)
    begin
    sec1='b0;
    sec2=4'b0;
    min1=4'b0;
    min2=4'b0;
    hr1=4'b0;
    hr2=4'b0;
    end
end
always @(posedge clk)
begin
    if(rst==0)
    begin
        sec1= sec1+4'b001;
        if(sec1>=4'b1010)
        begin
            sec1=4'b0;
            sec2=sec2+4'b0001;
            if(sec2>=4'b0110)
            begin
                sec2=4'b0;
                min1=min1+4'b0001;
                if(min1>=4'b1010)
                begin
                    min1=4'b0;
                    min2=min2+4'b0001;
                    if(min2>=4'b0110)
                    begin
                        min2=4'b0;
                        hr1=hr1+4'b0001;
                        if(hr1>=4'b1010)
                        begin
                            hr1=4'b0;
                            hr2=hr2+4'b0001;
                            if((hr2==4'b0010)&&(hr1==4'b0100))
                            begin
                                sec1=4'b0;
                                sec2=4'b0;
                                min1=4'b0;
                                min2=4'b0;
                                hr1=4'b0;
                                hr2=4'b0;
                            end
                        end
                    end
                end
            end
        end
    end 
    $display("%b %b %b %b %b %b", hr2,hr1,min2,min1,sec2,sec1);  
end
endmodule

------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

TESTBENCH:
`timescale 1ns/1ps
`include "BCD.v"
module BCD_TB();
reg rst, clk;
wire [3:0] sec1, sec2, min1, min2, hr1, hr2;
BCD ob(rst, clk, sec1, sec2, min1, min2, hr1, hr2);
initial
begin
    rst=1'b1;
    clk=1'b0;
    #10; rst=1'b0;
    #1000; $finish;
end
always 
begin
    #2; clk=~clk;
end
endmodule

------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

